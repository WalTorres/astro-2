---
import Button from "../components/Button.astro";
import Layout from "../layout/Layout.astro";

const miembros = [
  { nombre: "Juan Pérez", rol: "Fundador" },
  { nombre: "María López", rol: "Co-fundadora" },
  { nombre: "Carlos Sánchez", rol: "Desarrollador" },
];
---

<Layout>
  <main>
    <section class="contact">
      <section>
        <h2>Quiénes somos</h2>
        <p>
          Somos un pequeño equipo dedicado a ofrecer productos de calidad, con
          un enfoque sencillo y directo.
        </p>
      </section>

      <section>
        <h2>Nuestro equipo</h2>
        <ul>
          {
            miembros.map((miembro) => (
              <li>
                <strong>{miembro.nombre}</strong> - {miembro.rol}
              </li>
            ))
          }
        </ul>
      </section>

      <h1>Contáctanos</h1>

      <form>
        <div>
          <label>Nombre</label>
          <input type="text" name="name" required />
        </div>

        <div>
          <label>Email</label>
          <input type="email" name="email" required />
        </div>

        <div>
          <label>Mensaje</label>
          <textarea name="message" rows="5" required></textarea>
        </div>

        <Button type="submit" variant="primary" size="lg">
          Enviar Mensaje
        </Button>
      </form>
    </section>

    <style>
      .contact {
        max-width: 600px;
        margin: 4rem auto;
        padding: 0 2rem;
      }

      .contact h1 {
        margin-bottom: 2rem;
      }

      form div {
        margin-bottom: 1.5rem;
      }

      label {
        display: block;
        font-weight: 600;
        margin-bottom: 0.5rem;
      }

      input,
      textarea {
        width: 100%;
        padding: 0.75rem;
        border: 2px solid #e5e7eb;
        border-radius: 0.5rem;
        font-size: 1rem;
      }
    </style>
  </main>
</Layout>
