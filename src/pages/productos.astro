---
import ProductCard from "../components/ProductCard.astro";
import ServiceCard from "../components/ServiceCard.astro";
import { productos } from "../data/productos.js";
import Layout from "../layout/Layout.astro";
---

<Layout>
  <div class="services">
    <ServiceCard
      title="Desarrollo Web"
      description="Sitios web modernos y rapidos"
      link="/servicios/web"
    />
    <ServiceCard
      title="SEO"
      description="Mejora tu posicionamiento"
      link="/servicios/seo"
    />

    <ServiceCard
      title="Marketing"
      description="Estrategias efectivas"
      link="/servicios/marketing"
    />
  </div>

  <div class="container">
    <h1>Nuestros Productos</h1>

    <div class="products-grid">
      {productos.map((producto) => <ProductCard {...producto} />)}
    </div>
  </div>
</Layout>

<style>
  body {
    margin: 0;
    padding: 0;
    font-family:
      system-ui,
      -apple-system,
      sans-serif;
    background: #f5f5f5;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  h1 {
    text-align: center;
    color: #333;
    margin-bottom: 2rem;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .services {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    padding: 4rem 2rem;
  }
</style>
