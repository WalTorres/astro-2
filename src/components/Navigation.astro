---
import ThemeToggler from "./ThemeToggler.astro";
---

<nav class="nav">
  <ul class="nav-menu">
    <li class="nav-item"><a class="nav-link" href="/">Inicio</a></li>
    <li class="nav-item"><a class="nav-link" href="/nosotros">Nosotros</a></li>
    <li class="nav-item">
      <a class="nav-link" href="/productos">Productos</a>
    </li>
  </ul>
  <ThemeToggler />
</nav>

<style>
  .nav {
    display: flex;
    align-items: flex-start;
    padding: 2rem 0;
  }

  .nav-menu {
    display: flex;
    flex-wrap: wrap;
    padding: 0;
    margin: 0 auto 0 0;
  }

  .nav-item {
    opacity: 0.8;
    list-style: none;
    font-size: 0.95rem;
  }

  .nav-link {
    color: var(--grey-400);
    padding: 0.5rem 1rem;
    border-radius: 10px;
    text-decoration: none;
  }

  .nav-link:hover {
    color: var(--grey-900);
  }
</style>
